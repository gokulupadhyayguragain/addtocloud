# AddToCloud Credential Service Environment Configuration

# Database Configuration
DATABASE_URL=postgres://addtocloud:addtocloud_secure_2024@localhost:5432/addtocloud_prod?sslmode=disable
DATABASE_APP_URL=postgres://addtocloud_app:addtocloud_app_secure_2024@localhost:5432/addtocloud_prod?sslmode=disable

# MongoDB Configuration (for logging)
MONGODB_URL=mongodb://addtocloud:addtocloud_mongo_2024@localhost:27017/addtocloud_logs

# Redis Configuration (for caching)
REDIS_URL=redis://:addtocloud_redis_2024@localhost:6379/0

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_FROM=info@addtocloud.tech
SMTP_PASSWORD=your_app_specific_password_here
SMTP_TO=admin@addtocloud.tech

# Service Configuration
PORT=8080
GIN_MODE=release
LOG_LEVEL=info

# Security Configuration
JWT_SECRET=addtocloud_jwt_secret_key_2024_very_secure
API_KEY_PREFIX=atc_
PASSWORD_MIN_LENGTH=16
API_KEY_LENGTH=32

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://addtocloud.tech,https://www.addtocloud.tech
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Origin,Content-Type,Authorization,X-Requested-With

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_MANUAL_APPROVAL=true
ENABLE_AUTO_CLEANUP=true
ENABLE_AUDIT_LOGGING=true

# Cloud Provider Configuration
AWS_REGION=us-east-1
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
GCP_PROJECT_ID=your_gcp_project_id

# Kubernetes Configuration (when running in cluster)
K8S_NAMESPACE=addtocloud-databases
K8S_POSTGRES_SERVICE=postgres-service
K8S_MONGODB_SERVICE=mongodb-service
K8S_REDIS_SERVICE=redis-service

# Production Overrides (uncomment for production)
# DATABASE_URL=postgres://addtocloud:addtocloud_secure_2024@postgres-service.addtocloud-databases.svc.cluster.local:5432/addtocloud_prod?sslmode=disable
# MONGODB_URL=mongodb://addtocloud:addtocloud_mongo_2024@mongodb-service.addtocloud-databases.svc.cluster.local:27017/addtocloud_logs
# REDIS_URL=redis://:addtocloud_redis_2024@redis-service.addtocloud-databases.svc.cluster.local:6379/0
