{
  "dashboard": {
    "id": null,
    "title": "AddToCloud Multi-Cloud Platform Dashboard",
    "tags": ["addtocloud", "multi-cloud", "kubernetes"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Multi-Cloud Cluster Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"kubernetes-nodes\"}",
            "legendFormat": "{{cluster}} - {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "AddToCloud Backend Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"addtocloud-backend\"}[5m]))",
            "legendFormat": "95th percentile - {{cluster}}"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"addtocloud-backend\"}[5m]))",
            "legendFormat": "50th percentile - {{cluster}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "API Request Rate by Cloud Provider",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"addtocloud-backend\"}[5m])",
            "legendFormat": "{{cluster}} - {{method}} {{path}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Frontend Page Views",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(addtocloud_page_views_total[1h])",
            "legendFormat": "{{page}} - {{cluster}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{job=\"postgresql\"}",
            "legendFormat": "{{cluster}} - {{datname}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Istio Service Mesh Traffic",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(istio_requests_total[5m])",
            "legendFormat": "{{source_cluster}} -> {{destination_cluster}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Pod CPU Usage by Cloud Provider",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{container=\"addtocloud-backend\"}[5m])",
            "legendFormat": "{{cluster}} - {{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 8,
        "title": "Memory Usage by Cloud Provider",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{container=\"addtocloud-backend\"} / container_spec_memory_limit_bytes{container=\"addtocloud-backend\"}",
            "legendFormat": "{{cluster}} - {{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
