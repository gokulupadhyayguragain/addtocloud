# Staging Environment Configuration for AddToCloud

# API Configuration
NEXT_PUBLIC_API_URL=https://staging-api.addtocloud.tech
NEXT_PUBLIC_APP_URL=https://staging.addtocloud.tech
NEXT_PUBLIC_ENVIRONMENT=staging

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=${CLOUDFLARE_API_TOKEN}
CLOUDFLARE_ACCOUNT_ID=${CLOUDFLARE_ACCOUNT_ID}
CLOUDFLARE_ZONE_ID=${CLOUDFLARE_STAGING_ZONE_ID}

# Database URLs (Staging Kubernetes Services)
DATABASE_URL=postgres://addtocloud:${POSTGRES_PASSWORD}@postgres-service.addtocloud-staging.svc.cluster.local:5432/addtocloud_staging?sslmode=require
MONGODB_URL=mongodb://mongodb-service.addtocloud-staging.svc.cluster.local:27017/addtocloud_staging
REDIS_URL=redis://redis-service.addtocloud-staging.svc.cluster.local:6379/0

# Staging Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_ANALYTICS=false
ENABLE_MONITORING=true
LOG_LEVEL=info

# Staging Security
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=4h
SESSION_SECRET=${SESSION_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# External Services (Staging)
# Payment integration disabled - using manual processing for MVP
PAYMENT_METHOD=manual
PAYMENT_PROVIDER=none

# Manual payment settings for Nepal
MANUAL_PAYMENT_ENABLED=true
PAYMENT_INSTRUCTIONS="Contact admin@addtocloud.tech for payment processing via Payoneer, Bank Transfer, or Cryptocurrency"
SUPPORTED_CURRENCIES=USD,EUR,NPR
MANUAL_PAYMENT_METHODS=payoneer,bank_transfer,cryptocurrency

# Nepal-specific payment notes
PAYMENT_NOTES="We accept: 1) Payoneer transfers 2) International bank transfers 3) Cryptocurrency (USDT/USDC) 4) Local payment upon request"

# Rate Limiting (Relaxed for staging)
RATE_LIMIT_REQUESTS=2000
RATE_LIMIT_WINDOW=1h

# CORS Settings (Staging)
CORS_ALLOWED_ORIGINS=https://staging.addtocloud.tech,https://staging-admin.addtocloud.tech
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key

# Monitoring URLs (Staging)
PROMETHEUS_URL=http://prometheus-service.monitoring-staging.svc.cluster.local:9090
GRAFANA_URL=http://grafana-service.monitoring-staging.svc.cluster.local:3000
JAEGER_URL=http://jaeger-service.monitoring-staging.svc.cluster.local:16686
