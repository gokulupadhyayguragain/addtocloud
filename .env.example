# Environment Configuration for AddToCloud Platform

# Application Settings
ENV=development
PORT=8080
APP_NAME=AddToCloud
VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgres://addtocloud:password@localhost:5432/addtocloud?sslmode=disable
MONGODB_URL=mongodb://localhost:27017/addtocloud
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Cloud Provider Configuration
# Azure
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-west-2

# GCP
GOOGLE_APPLICATION_CREDENTIALS=path/to/gcp-service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# External Services
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Monitoring and Observability
PROMETHEUS_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://addtocloud.tech
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h

# File Upload
MAX_UPLOAD_SIZE=10MB
UPLOAD_PATH=./uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
