# Kubernetes Production Environment Configuration

# Database URLs - Use Kubernetes service names
DATABASE_URL=postgres://addtocloud:${POSTGRES_PASSWORD}@postgres-service.addtocloud.svc.cluster.local:5432/addtocloud?sslmode=disable
MONGODB_URL=mongodb://mongodb-service.addtocloud.svc.cluster.local:27017/addtocloud
REDIS_URL=redis://redis-service.addtocloud.svc.cluster.local:6379

# Application Settings
ENV=production
PORT=8080
APP_NAME=AddToCloud
VERSION=1.0.0

# JWT Configuration - Use secrets
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h

# Cloud Provider Configuration - Use secrets
# Azure
AZURE_SUBSCRIPTION_ID=${AZURE_SUBSCRIPTION_ID}
AZURE_CLIENT_ID=${AZURE_CLIENT_ID}
AZURE_CLIENT_SECRET_VALUE=${AZURE_CLIENT_SECRET_VALUE}
AZURE_TENANT_ID=${AZURE_TENANT_ID}

# AWS
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1

# GCP
GOOGLE_APPLICATION_CREDENTIALS=/etc/gcp/service-account-key.json
GCP_PROJECT_ID=${GCP_PROJECT_ID}

# External Services
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Monitoring and Observability
PROMETHEUS_ENABLED=true
JAEGER_ENDPOINT=http://jaeger-service.monitoring.svc.cluster.local:14268/api/traces

# CORS Settings
CORS_ALLOWED_ORIGINS=https://addtocloud.tech,https://app.addtocloud.tech,https://dashboard.addtocloud.tech
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1h

# File Upload
MAX_UPLOAD_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/tls.crt
SSL_KEY_PATH=/etc/ssl/private/tls.key

