# Development Environment Variables for AddToCloud
# These are used for local development only

# Development API URLs (localhost)
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development

# Local backend service
BACKEND_URL=http://localhost:8080

# Local database URLs
DATABASE_URL=postgresql://addtocloud:dev_password@localhost:5432/addtocloud_dev
MONGODB_URL=mongodb://addtocloud:dev_password@localhost:27017/addtocloud_dev
REDIS_URL=redis://:dev_password@localhost:6379

# Development settings
JWT_SECRET=dev_jwt_secret_key_not_for_production
ENCRYPTION_KEY=dev_encryption_key_32_characters

# Development features
METRICS_ENABLED=true
LOGGING_LEVEL=debug
TRACING_ENABLED=false

# Local development flags
MULTI_CLOUD_ENABLED=false
AUTO_SCALING_ENABLED=false
BACKUP_ENABLED=false
