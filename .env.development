# Development Environment Configuration for AddToCloud

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-dev-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ZONE_ID=your-development-zone-id

# Database URLs (Local Development)
DATABASE_URL=postgres://addtocloud:password@localhost:5432/addtocloud_dev
MONGODB_URL=mongodb://localhost:27017/addtocloud_dev
REDIS_URL=redis://localhost:6379/0

# Development Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
LOG_LEVEL=debug

# Local Development Ports
FRONTEND_PORT=3000
BACKEND_PORT=8080
DATABASE_PORT=5432
REDIS_PORT=6379
MONGODB_PORT=27017

# Development Security (Use simple values for local dev)
JWT_SECRET=dev-jwt-secret-key-not-for-production
SESSION_SECRET=dev-session-secret-not-for-production
ENCRYPTION_KEY=dev-encryption-key-not-for-production

# Mock External Services
PAYONEER_API_URL=http://localhost:8081/mock-payoneer
STRIPE_WEBHOOK_URL=http://localhost:3000/api/webhooks/stripe
