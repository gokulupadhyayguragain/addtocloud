# Production Environment Configuration for AddToCloud

# API Configuration
NEXT_PUBLIC_API_URL=https://api.addtocloud.tech
NEXT_PUBLIC_APP_URL=https://addtocloud.tech
NEXT_PUBLIC_ENVIRONMENT=production

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=${CLOUDFLARE_API_TOKEN}
CLOUDFLARE_ACCOUNT_ID=${CLOUDFLARE_ACCOUNT_ID}
CLOUDFLARE_ZONE_ID=${CLOUDFLARE_ZONE_ID}

# Database URLs (Production Kubernetes Services)
DATABASE_URL=postgres://addtocloud:${POSTGRES_PASSWORD}@postgres-service.addtocloud.svc.cluster.local:5432/addtocloud?sslmode=require
MONGODB_URL=mongodb://mongodb-service.addtocloud.svc.cluster.local:27017/addtocloud
REDIS_URL=redis://redis-service.addtocloud.svc.cluster.local:6379/0

# Production Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_PERFORMANCE_TRACKING=true
LOG_LEVEL=warn

# Production Security
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=${SESSION_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
API_SECRET_KEY=${API_SECRET_KEY}

# External Services (Production)
PAYONEER_ENVIRONMENT=production
PAYONEER_API_URL=https://api.payoneer.com
STRIPE_ENVIRONMENT=live

# Rate Limiting (Strict for production)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1h
RATE_LIMIT_SKIP_FAILED_REQUESTS=false
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Settings (Production)
CORS_ALLOWED_ORIGINS=https://addtocloud.tech,https://app.addtocloud.tech,https://dashboard.addtocloud.tech
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# Performance Settings
COMPRESSION_ENABLED=true
CACHE_CONTROL_MAX_AGE=3600
STATIC_CACHE_MAX_AGE=86400

# Monitoring URLs (Production)
PROMETHEUS_URL=http://prometheus-service.monitoring.svc.cluster.local:9090
GRAFANA_URL=http://grafana-service.monitoring.svc.cluster.local:3000
JAEGER_URL=http://jaeger-service.monitoring.svc.cluster.local:16686

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# High Availability
HA_ENABLED=true
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=3
MAX_REPLICAS=20
